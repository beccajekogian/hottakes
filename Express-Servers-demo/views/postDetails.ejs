<%- include('partials/header', {title:"Post Details"}) -%>


<section class="gradient-custom">
  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 col-xl-8">
        <div class="card">
          <div class="card-body p-4">
            <h4 class="text-center mb-4 pb-2">Discussion Section:</h4>

            <div class="row">
              <div class="col">
                <div class="d-flex flex-start">
                  <img class="rounded-circle shadow-1-strong me-3"
                    src="https://cdn-icons-png.flaticon.com/512/634/634741.png" alt="avatar" width="65"
                    height="65" />
                  <div class="flex-grow-1 flex-shrink-1">
                    <div>
                      <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-1">
                          <%=post.title%> <span class="small"><%= post.topic%></span>
                        </p>
                      </div>
                      <p class="small mb-0">
                        <%=post.content%>
                      </p>
                    </div>

                    <div class="d-flex flex-start mt-4">
                      <a class="me-3" href="#">
                        <img class="rounded-circle shadow-1-strong"
                          src="https://cdn-icons-png.flaticon.com/512/634/634741.png" alt="avatar"
                          width="65" height="65" />
                      </a>
                      <div class="flex-grow-1 flex-shrink-1">
                        <div>
                          <div class="d-flex justify-content-between align-items-center">
                            <p class="mb-1">
                              <%for(comment in comments){%>
                                <% if (comments[comment]['commentPostID'] === post['postID']){%>
                               <span class="small"> <%=comments[comment]['commentSubject']%></span>
                            </p>
                          </div>
                          <p class="small mb-0">
                          <%=comments[comment]['commentContent']%>
                            <%}%>
                            <%}%>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>























<h2>Create a New Comment for the post <%=post.postTitle%></h2>


<form action="/commentCreate" method="POST">

  <input type="hidden" id="commentPostID" name="commentPostID" value = "<%=post.postID%>">

  <label for="title">Comment subject: </label>
  <input type="text" id="commentSubject" name="commentSubject" value=""><br>

  <label for="content">Comment: </label>
  <input type="text" id="commentContent" name="commentContent" value=""><br>

  <br><br>
  <input type="submit" value="Create new comment!">

</form>

<%- include('partials/footer') -%>
