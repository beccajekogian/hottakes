<%- include('partials/header', {title:"Create Post"}) -%>

<h2>Create a New Post!</h2>

<form action="/postCreate" method="POST">

  <label for="title">Post title: </label>
  <input type="text" id="title" name="postTitle" value=""><br>

  <label for="content">What's on your mind: </label>
  <input type="text" id="content" name="postContent" value=""><br>

  <label for="topic">Topic:</label>
  <input type="text" id="topic" name="postTopic" value=""><br>

  <label for="topic">Choose a topic:</label>
  <select id="topic" name="postTopic">
    <%for(topic in topics){%>

    <option value="<%=topics[topic].topicName%>"><%=topics[topic].topicName%></option>
    <%}%>
  </select>

  <br><br>
  <input type="submit" value="Create new post!">

</form>

<%- include('partials/footer') -%>
